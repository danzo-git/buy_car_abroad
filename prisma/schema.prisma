generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  client
  seller
  admin
  pending_seller
}
model users {
  id           Int       @id @default(autoincrement())
  full_name    String    
  phone_number String   @unique
  email        String    @unique 
  password     String 
  role         UserRole  @default(client)
  seller       sellers?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model sellers {
  id           Int     @id @default(autoincrement())
  company_name String?
  
  country      String?
  is_approved  Boolean @default(false)
  // Relation avec user
  userId Int   @unique
  user         users @relation(fields: [userId], references: [id])
  vehicles     vehicules[]
}


model vehicules {

  id               Int    @id @default(autoincrement())
  description      String  
  brand            String 
  model            String
  price            Float
  country_of_origin String
  status           String
  year              String
  seller_id         Int
  seller            sellers       @relation(fields: [seller_id], references: [id]) 
  images            vehiculeImage[]
}

model vehiculeImage {
  id        Int   @id @default(autoincrement())
  url       String
  vehiculeId Int
  vehicule   vehicules @relation(fields: [vehiculeId], references: [id])
}